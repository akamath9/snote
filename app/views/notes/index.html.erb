<div>
<table class="table table-dark">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <% if note.user_id == current_user[:id] %>
      <tr>
          <td><%= note.title %></td>
          <td><%= note.body %></td>
          <td><%= note.user.email %></td>
          <td><%= button_to 'Show', note, class:"btn btn-info", method: :get %></td>
          <td><%= button_to 'Edit', edit_note_path(note), class:"btn btn-primary", method: :get %></td>
          <td><%= button_to 'Destroy', note, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
</div>
<%= button_to 'New Note', new_note_path, class:"btn btn-success", method: :get %>
